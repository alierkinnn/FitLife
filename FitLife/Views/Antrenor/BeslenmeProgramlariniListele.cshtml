@model List<BeslenmeProgrami>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>Beslenme Programı</th>
			<th>Hedef</th>
			<th>Kalori Hedefi</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach (BeslenmeProgrami beslenmeProgrami in Model)
		{
			<tr>
				<td>@beslenmeProgrami.BeslenmeProgramiAdi</td>
				<td>@beslenmeProgrami.Hedef</td>
				<td>@beslenmeProgrami.KaloriHedefi</td>
				<td>
					<a href="#" onclick="Sil('@Url.Action("BeslenmeProgramiSil", "Antrenor", new { id = beslenmeProgrami.Id })')" class="btn btn-danger">Sil</a>
					<a href="/Antrenor/BeslenmeProgramiGuncelle/@beslenmeProgrami.Id" class="btn btn-info text-white">Güncelle</a>
				</td>
			</tr>
		}
	</tbody>

</table>

<script>
	function Sil(url) {
		var onay = window.confirm("Bu programı silmek istediğinizden emin misiniz?");

		if (onay) {
			window.location.href = url;
		}
	}
</script>
