@model List<Antrenor>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>İsim</th>
			<th>E-posta</th>
			<th>Telefon Numarası</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Antrenor antrenor in Model)
		{
			<tr>
				<td>@($"{antrenor.Ad} {antrenor.Soyad}")</td>
				<td>@antrenor.Eposta</td>
				<td>@antrenor.Telefon</td>
				<td>
					<a href="#" onclick="Sil('@Url.Action("antrenorSil", "Admin", new { id = antrenor.Id })')" class="btn btn-danger">Sil</a>
					<a href="/Admin/AntrenorGuncelle/@antrenor.Id" class="btn btn-info text-white">Güncelle</a>
				</td>
			</tr>
		}
	</tbody>

</table>

<script>
	function Sil(url) {
		var onay = window.confirm("Bu antrenörü silmek istediğinizden emin misiniz?");

		if (onay) {
			window.location.href = url;
		}
	}
</script>
