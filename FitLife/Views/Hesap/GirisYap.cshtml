
<link rel="stylesheet" href="~/css/Home/girisYap.css"/>

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card" id="kart">
                <div class="card-header">
                    <h3 class="text-center text-white">Giriş Yap</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group mt-3">
                            <label class="my-2" for="email">E-posta:</label>
                            <input type="email" class="form-control" id="eposta" placeholder="E-posta adresinizi girin">
                        </div>
                        <div class="form-group mt-3">
                            <label class="my-2" for="password">Şifre:</label>
                            <input type="password" class="form-control" id="sifre" placeholder="Şifrenizi girin">
                        </div>
                        <button id="girisYap" type="submit" class="btn btn-giris-yap btn-block my-3">Giriş Yap</button>
                        <div class="text-center mt-3">
                            <a asp-action="KayitOl" id="kayitOl" class="btn btn-kayit-ol">Kayıt Ol</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>