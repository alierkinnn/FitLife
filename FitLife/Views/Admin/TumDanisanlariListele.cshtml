@model List<Danisan>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>İsim</th>
			<th>E-posta</th>
			<th>Telefon Numarası</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(Danisan danisan in Model)
		{
			<tr>
				<td>@($"{danisan.Ad} {danisan.Soyad}")</td>
				<td>@danisan.Eposta</td>
				<td>@danisan.Telefon</td>
				<td>
					<a href="#" onclick="Sil('@Url.Action("DanisanSil", "Admin", new { id = danisan.Id })')" class="btn btn-danger">Sil</a>
					<a href="/Admin/DanisanGuncelle/@danisan.Id" class="btn btn-info text-white">Güncelle</a>
				</td>
			</tr>
		}
	</tbody>

</table>

<script>
	function Sil(url) {
		var onay = window.confirm("Bu danışanı silmek istediğinizden emin misiniz?");

		if (onay) {
			window.location.href = url;
		}
	}
</script>