@model GirisYapModel 


<link rel="stylesheet" href="~/css/Home/girisYap.css"/>

<div class="container mt-5">

    <div class="row justify-content-center">

        <form class="col-md-6" method="post" asp-action="GirisYap" onsubmit="return validateForm()">
            <div>
                <div class="card" id="kart">
                    <div class="card-header">
                        <h3 class="text-center text-white">Giriş Yap</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group mt-3">
                                <label asp-for="Eposta" class="my-2" for="email">E-posta:</label>
                                <input type="email" asp-for="Eposta" class="form-control" id="eposta" placeholder="E-posta adresinizi girin">
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Sifre" class="my-2" for="password">Şifre:</label>
                                <input type="password" asp-for="Sifre" class="form-control" id="sifre" placeholder="Şifrenizi girin">
                            </div>
                            <button id="girisYap" type="submit" class="btn btn-giris-yap btn-block my-3">Giriş Yap</button>
                            <div class="text-center mt-3">
                                <a asp-action="KayitOl" id="kayitOl" class="btn btn-kayit-ol">Kayıt Ol</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </form>

    </div>

</div>

<script>
    function validateForm() {
        var eposta = document.getElementById('eposta').value;
        var sifre = document.getElementById('sifre').value;

        if (eposta.trim() === '' || sifre.trim() === '') {
            alert('Lütfen tüm alanları doldurun.');
            return false; // Formu gönderme
        }

        return true; // Formu gönder
    }
</script>